        <TextBox Height="23" HorizontalAlignment="Left" Margin="26,42,0,0" Name="textBox1" VerticalAlignment="Top" Width="228" TextAlignment="Center" />
        <RadioButton  Content="Имя" Height="16" HorizontalAlignment="Left" Margin="24,14,0,0" Name="radioButton1" VerticalAlignment="Top" GroupName="choose" />
        <RadioButton Content="Номер карточки" Height="16" HorizontalAlignment="Left" Margin="125,14,0,0" Name="radioButton2" VerticalAlignment="Top" GroupName="choose" />
    </Grid>
</Window>
