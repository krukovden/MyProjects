<Window x:Class="Cinema.Chair"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chair" Height="185" Width="300">
    <Grid  Style="{StaticResource ResourceKey=ggg}" Height="145">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138*" />
            <ColumnDefinition Width="140*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64*" />
            <RowDefinition Height="43*" />
            <RowDefinition Height="38*" />
        </Grid.RowDefinitions>
        <TextBox Height="23" HorizontalAlignment="Center" Margin="0" Name="textBox1" VerticalAlignment="Center" Width="120" Grid.Column="1" />
        <TextBox Height="23" HorizontalAlignment="Center" Margin="0" Name="textBox2" VerticalAlignment="Center" Width="120" Grid.Column="1" Grid.Row="1" />
        <TextBlock Height="23" HorizontalAlignment="Center" Margin="0" Name="textBlock1" Text="Ряд" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" />
        <TextBlock Height="23" HorizontalAlignment="Center" Margin="0" Name="textBlock2" Text="Место" VerticalAlignment="Center" Grid.Row="1" FontSize="16" FontWeight="Bold" />
        <Button Content="Хорошо" Grid.ColumnSpan="2" Grid.Row="2" Height="23" HorizontalAlignment="Left" Margin="102,3,0,0" Name="button1" VerticalAlignment="Top" Width="92" Click="button1_Click" />
    </Grid>
</Window>
