<Window x:Class="Cinema.InfoChair"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InfoChair" Height="517" Width="293">
    <Grid Height="453">
        <FlowDocumentPageViewer Margin="0,0,0,0">
            <FlowDocument>
                <Paragraph>
                    <InlineUIContainer>
                        <Label Content="                      Megastar" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold" />
